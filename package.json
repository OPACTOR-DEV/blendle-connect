{
  "name": "blendle-connect",
  "version": "1.0.0",
  "description": "Connect to ChatGPT (Codex) and Gemini CLI tools",
  "main": "dist/main/index.js",
  "scripts": {
    "build:ts": "tsc && tsc -p tsconfig.renderer.json && cp src/renderer/index.html dist/renderer/ && cp src/renderer/styles.css dist/renderer/",
    "clean": "rm -rf dist",
    "start": "npm run build:ts && electron .",
    "dev": "npm run build:ts && NODE_ENV=development electron .",
    "build": "npm run build:ts && electron-builder",
    "build:mac": "npm run build:ts && electron-builder --mac",
    "build:mac-unsigned": "npm run build:ts && CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --mac",
    "dist": "npm run build:ts && electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "codex",
    "gemini",
    "ai",
    "cli",
    "installer"
  ],
  "author": "Blendle Connect",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "express": "^4.18.2"
  },
  "build": {
    "appId": "com.blendle.connect",
    "productName": "Blendle Connect",
    "npmRebuild": false,
    "directories": {
      "output": "dist-app"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!src/**/*",
      "!*.ts"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
